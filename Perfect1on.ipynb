    "def is_perfect_number(Num, i = 1):\n",
    "    \n",
    "    if i == Num:\n",
    "        return 0\n",
    "    if Num % i == 0:\n",
    "        return i + is_perfect_number(Num, i + 1)\n",
    "    else:\n",
    "        return is_perfect_number(Num, i + 1)\n",
    "    return is_perfect_number(Num) == Num\n",
    "is_perfect_number(28)"
   ]
  }
